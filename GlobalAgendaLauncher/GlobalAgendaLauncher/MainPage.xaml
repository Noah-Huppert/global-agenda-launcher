<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlobalAgendaLauncher.MainPage">

    <ScrollView>
        <HorizontalStackLayout>
            <VerticalStackLayout
                Spacing="25"
                Padding="30,0"
                VerticalOptions="Center"
                >
                <VerticalStackLayout>
                    <Label
                        Text="Global Agenda Location"
                        FontSize="Small"
                        />
                    <HorizontalStackLayout Padding="0,10,0,0">
                        <Entry
                            x:Name="GlobalAgendaBinaryLocation"
                            Placeholder="C:\...\GlobalAgenda.exe"
                            />
                        <Button
                            x:Name="SelectGobalAgendaBinaryLocation"
                            Text="..."
                            Clicked="SelectGobalAgendaBinaryLocation_Clicked"
                            />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label
                        Text="Global Agenda Login"
                        SemanticProperties.HeadingLevel="Level1"
                        FontSize="Small"
                        />

                    <VerticalStackLayout
                        Padding="0,10,0,0"
                        >
                        <Label
                             Text="Hi-Rez Username"
                             />
                        <Entry
                            x:Name="Username"
                            Placeholder="Username"
                            />
                    </VerticalStackLayout>

                    <VerticalStackLayout
                        Padding="0,10,0,0"
                        >
                        <Label
                            Text="Password"
                            />
                        <Entry
                            x:Name="Password"
                            Placeholder="Hi-Rez Password"
                            IsPassword="True"
                            />
                    </VerticalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="SavePassword" />
                        <Label
                            Text="Save Password"
                            VerticalOptions="Center"
                            >
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="SavePasswordCheckBoxLabel_Tapped" />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                    <Button
                        x:Name="LaunchBtn"
                        Text="Launch"
                        SemanticProperties.Hint="Starts Global Agenda"
                        Clicked="OnLaunchClicked"
                        HorizontalOptions="Start" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
